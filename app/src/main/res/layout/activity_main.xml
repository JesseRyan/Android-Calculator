<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:touchscreenBlocksFocus="true"
    android:focusableInTouchMode="false"
    android:background="#ff000000">

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="4"
        android:orientation="horizontal"
        android:verticalSpacing="1dp"
        android:horizontalSpacing="1dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="true"
        android:id="@+id/gridLayout2">

        <Button
            android:layout_column="0"
            android:text="del"
            android:background="#3C3C3D"
            android:textColor="#2D9FC9"
            android:id="@+id/fDelete" />

        <Button
            android:layout_column="1"
            android:text="c"
            android:background="#3C3C3D"
            android:textColor="#2D9FC9"
            android:id="@+id/fClear" />

        <Button
            android:layout_column="2"
            android:text="*"
            android:background="#3C3C3D"
            android:textColor="#2D9FC9"
            android:id="@+id/oTimes" />

        <Button
            android:layout_column="3"
            android:text="/"
            android:background="#3C3C3D"
            android:textColor="#2D9FC9"
            android:id="@+id/oDivide"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:paddingEnd="25dp" />

        <Button android:text="7"
            android:id="@+id/i7"
            android:textColor="#2D9FC9"
            android:background="#3C3C3D" />

        <Button android:text="8"
            android:background="#3C3C3D"
            android:textColor="#2D9FC9"
            android:id="@+id/i8" />

        <Button android:text="9"
            android:background="#3C3C3D"
            android:textColor="#2D9FC9"
            android:id="@+id/i9" />

        <Button android:text="+"
            android:background="#3C3C3D"
            android:textColor="#2D9FC9"
            android:id="@+id/oPlus"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:paddingEnd="25dp" />

        <Button android:text="4"
            android:background="#3C3C3D"
            android:textColor="#2D9FC9"
            android:id="@+id/i4" />

        <Button android:text="5"
            android:background="#3C3C3D"
            android:textColor="#2D9FC9"
            android:id="@+id/i5" />

        <Button android:text="6"
            android:background="#3C3C3D"
            android:textColor="#2D9FC9"
            android:id="@+id/i6" />

        <Button android:text="-"
            android:background="#3C3C3D"
            android:textColor="#2D9FC9"
            android:id="@+id/oMinus"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:paddingEnd="25dp" />

        <Button android:text="1"
            android:background="#3C3C3D"
            android:textColor="#2D9FC9"
            android:id="@+id/i1" />

        <Button android:text="2"
            android:background="#3C3C3D"
            android:textColor="#2D9FC9"
            android:id="@+id/i2" />

        <Button android:text="3"
            android:background="#3C3C3D"
            android:textColor="#2D9FC9"
            android:id="@+id/i3" />

        <Button
            android:layout_gravity="center|fill"
            android:layout_rowSpan="3"
            android:text="="
            android:background="#3C3C3D"
            android:textColor="#2D9FC9"
            android:id="@+id/execute3"
            android:textAlignment="center"
            android:paddingEnd="25dp" />

        <Button
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:text="0"
            android:background="#3C3C3D"
            android:textColor="#2D9FC9"
            android:id="@+id/i0" />

        <Button android:text="."
            android:background="#3C3C3D"
            android:textColor="#2D9FC9"
            android:id="@+id/iDecimal"
            />

    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="none|numberDecimal"
        android:ems="10"
        android:id="@+id/primaryState"
        android:textColor="#2D9FC9"
        android:text="0"
        android:singleLine="false"
        android:textAlignment="textEnd"
        android:textSize="40sp"
        android:clickable="false"
        android:editable="false"
        android:contextClickable="false"
        android:layout_above="@+id/gridLayout2"
        android:layout_alignParentStart="true"
        android:textIsSelectable="false" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/listView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
